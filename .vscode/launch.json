{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "args": ["week", "1956-10-15"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "name": "Python: time_since.py",
      "program": "bin/time_since.py",
      "type": "python",
      "request": "launch",
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "debugPort": "0",
      "name": "Attach rdbg",
      "type": "rdbg",
      "request": "attach",
    },
    {
      "args": [
        "-I",
        "${workspaceRoot}"
      ],
      "debugPort": "0",
      "name": "RSpec - all",
      "request": "launch",
      "script": "${workspaceRoot}/exe/rspec",
      "type": "rdbg",
    },
    {
      "args": [
        "-I",
        "${workspaceRoot}",
        "${file}"
      ],
      "debugPort": "0",
      "name": "RSpec - active spec file only",
      "request": "launch",
      "script": "${workspaceRoot}/exe/rspec",
      "type": "rdbg",
    }
  ]
}
